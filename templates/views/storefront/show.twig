{% extends 'layouts/base.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" type="text/css" href="/public/app.css">
{% endblock %}

{% block title %}{{ product.title }} - {{ variant.title }}{% endblock %}

{% block main_content %}
					<div>
						<div>
							<div>
								<img class="pic" src="../../../public/images/1.png" alt="" />
							</div>
						</div>
						<div>
							<h4>
								<a href="#" class="">
									{{ product.title }} - {{ variant.title }}
								</a>
							</h4>
							<p>
								{{ variant.description|raw }}
							</p>
							<h4>Cool Styles:</h4>
							<p>
								{% for option in product.Variants %}
									{% if option.id == variant.id %}
										{{ option.title }}
									{% else %}
										| <a href="/storefront/products/{{ product.slug }}?v={{ option.slug }}">{{ option.title }}</a>
									{% endif %}
								{% endfor %}
							</p>
							<div>
								<strong>Price : </strong>
								<span>${{ variant.price }}</span>
							</div>
							<div>
								<strong>In Stock : </strong>
								<span>
									{% if variant.inventory < 10 %}
										We almost have enough!
									{% elseif variant.inventory == 0 %}
										We have all our followers- I mean we don't got em!
									{% else %}
										We got em!
									{% endif %}
								</span>
							</div>
							<p>
								<button type="disabled">
									<i></i> Not Working at this Time
								</button>
							</p>
						</div>
					</div>
{% endblock %}